version: '2'
services:
  node-init:
    image: "{{ container_registry }}/tungsten-node-init:{{ contrail_version_tag }}"
    env_file: /etc/contrail/common_analytics.env
    environment:
      - CONTRAIL_STATUS_IMAGE="{{ container_registry }}/tungsten-status:{{ contrail_version_tag }}"
    privileged: true
    pid: host
    network_mode: "host"
    volumes:
      {{ common_volumes | to_yaml | indent(width=6) }}
  nodemgr:
    image: "{{ container_registry }}/tungsten-nodemgr:{{ contrail_version_tag }}"
    env_file: /etc/contrail/common_analytics.env
    environment:
      - NODE_TYPE=analytics
    network_mode: "host"
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock
    volumes_from:
      - node-init
    depends_on:
      - node-init
    restart: always
    stdin_open: {{ contrail_configuration.STDIN_OPEN }}
    tty: {{ contrail_configuration.TTY }}
    logging:
      driver: "{{ analytics_log_driver }}"
      options:
        max-size: "{{ analytics_log_max_size }}"
        max-file: "{{ analytics_log_max_file }}"
  api:
    image: "{{ container_registry }}/tungsten-analytics-api:{{ contrail_version_tag }}"
    network_mode: "host"
    env_file: /etc/contrail/common_analytics.env
    volumes_from:
      - node-init
    depends_on:
      - node-init
    restart: always
    stdin_open: {{ contrail_configuration.STDIN_OPEN }}
    tty: {{ contrail_configuration.TTY }}
    logging:
      driver: "{{ analytics_log_driver }}"
      options:
        max-size: "{{ analytics_log_max_size }}"
        max-file: "{{ analytics_log_max_file }}"
  collector:
    image: "{{ container_registry }}/tungsten-analytics-collector:{{ contrail_version_tag }}"
    network_mode: "host"
    env_file: /etc/contrail/common_analytics.env
    volumes_from:
      - node-init
    depends_on:
      - node-init
    restart: always
    stdin_open: {{ contrail_configuration.STDIN_OPEN }}
    tty: {{ contrail_configuration.TTY }}
    logging:
      driver: "{{ analytics_log_driver }}"
      options:
        max-size: "{{ analytics_log_max_size }}"
        max-file: "{{ analytics_log_max_file }}"
