version: '2'
services:
  node-init:
    image: "{{ container_registry }}/tungsten-node-init:{{ contrail_version_tag }}"
    env_file: /etc/contrail/common_mesosmanager.env
    environment:
      - CONTRAIL_STATUS_IMAGE="{{ container_registry }}/tungsten-status:{{ contrail_version_tag }}"
    privileged: true
    pid: host
    network_mode: "host"
    volumes:
      {{ common_volumes | to_yaml | indent(width=6) }}
  mesosmanager:
    image: "{{ container_registry }}/tungsten-mesosphere-mesos-manager:{{ contrail_version_tag }}"
    network_mode: host
    env_file: /etc/contrail/common_mesosmanager.env
    volumes_from:
      - node-init
    depends_on:
      - node-init
    restart: always
    stdin_open: {{ contrail_configuration.STDIN_OPEN }}
    tty: {{ contrail_configuration.TTY }}
